{
	"name": "xs",
	"description": "D bindings to the XS JavaScript engine",
	"authors": [
		"Chance Snow"
	],
	"license": "MIT",
  "copyright": "Copyright Â© 2020, Chance Snow",
  "subPackages": [
    "examples/hello-world"
  ],
  "targetPath": "bin",
  "targetType": "library",
  "systemDependencies": "linux: gio-2.0",
	"preGenerateCommands": [
    "make source/xs/bindings/package.d"
  ],
  "preBuildCommands": [
    "make xs"
  ],
  "lflags-posix": [
    "-L$PACKAGE_DIR/lib"
  ],
  "libs": [
    "xs"
  ],
  "libs-linux": [
    "gio-2.0"
  ],
  "configurations": [
    {
      "name": "library"
    },
    {
      "name": "static",
      "targetType": "staticLibrary"
    },
    {
      "name": "release",
      "preBuildCommands": [
        "make xs-release"
      ]
    },
    {
      "name": "static-release",
      "targetType": "staticLibrary",
      "preBuildCommands": [
        "make xs-release"
      ]
    }
  ]
}
